# =============================================
# Telegram Bot
# =============================================
# Токен бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# =============================================
# PostgreSQL
# =============================================
POSTGRES_USER=vshu_bot
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=vshu_bot_db

# Внешний порт для доступа к БД (по умолчанию 5433, чтобы не конфликтовать с другими)
DB_EXTERNAL_PORT=5433

# =============================================
# pgAdmin
# =============================================
# Логин/пароль для входа в pgAdmin
PGADMIN_EMAIL=admin@vshu.local
PGADMIN_PASSWORD=admin123

# Порт pgAdmin (по умолчанию 5051)
PGADMIN_PORT=5051

# =============================================
# Логирование
# =============================================
LOG_LEVEL=INFO
